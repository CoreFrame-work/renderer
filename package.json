{
  "name": "@lightningjs/renderer",
  "version": "1.0.0",
  "description": "WebGL Renderer",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./workers/renderer": "./dist/src/render-drivers/threadx/worker/renderer.js"
  },
  "scripts": {
    "start": "npm run dev",
    "test": "backstop test",
    "test:ci": "(npm run serve&) && npm test",
    "test:update": "backstop reference",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:fix": "npm run lint:fix:prettier && npm run lint:fix:eslint",
    "lint:prettier": "prettier --check \"**/*.{ts,js,cjs,md}\"",
    "lint:fix:prettier": "prettier --write \"**/*.{ts,js,cjs,md}\"",
    "lint:eslint": "eslint .",
    "lint:fix:eslint": "eslint --fix .",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "concurrently -c \"auto\" \"npm:watch\" \"npm:vite\"",
    "vite": "vite --open \"/test/index.html\" --host",
    "serve": "vite --host --port 5000",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/comcast-lightning/renderer"
  },
  "keywords": [
    "WebGL",
    "JS",
    "WPE"
  ],
  "author": "Erik Haandrikman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/comcast-lightning/renderer/issues"
  },
  "homepage": "https://github.com/comcast-lightning/renderer#readme",
  "devDependencies": {
    "@lightningjs/renderer": "file:",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "backstopjs": "^6.2.2",
    "concurrently": "^8.0.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "typescript": "^5.0.2",
    "vite": "^4.1.4",
    "vite-tsconfig-paths": "^4.0.5"
  },
  "dependencies": {
    "@lightningjs/threadx": "file:../threadx"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,cjs,md}": "prettier --write"
  }
}
