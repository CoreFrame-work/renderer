{
  "name": "examples",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "concurrently -c \"auto\" \"bun:watch:renderer\" \"bun:dev\"",
    "start:prod": "concurrently -c \"auto\" \"bun:watch:renderer\" \"bun:watch\" \"sleep 5 && bun preview\"",
    "dev": "vite --open --host",
    "build": "vite build",
    "watch": "vite build --watch",
    "watch-all": "concurrently -c \"auto\" \"bun:watch:renderer\" \"bun:watch\"",
    "preview": "vite preview --host --open",
    "preview:automation": "vite preview",
    "build:renderer": "cd .. && bun run build",
    "watch:renderer": "cd .. && bun run watch"
  },
  "author": "Frank Weindel",
  "license": "Apache-2.0",
  "dependencies": {
    "@lightningjs/renderer": "link:.."
  },
  "devDependencies": {
    "vite": "^4.4.9"
  },
  "engines": {
    "npm": "please-use-bun"
  }
}
